// This block defines your database connection
datasource db {
  provider = "postgresql"
  // This URL is loaded from your .env file
  url      = env("DATABASE_URL")
}

// This block tells Prisma to generate the JavaScript client
generator client {
  provider = "prisma-client-js"
}

// --- Application Models ---

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String

  createdEvents Event[] @relation("CreatedBy")
  rsvps         Rsvp[]
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime

  createdBy   User     @relation("CreatedBy", fields: [createdById], references: [id])
  createdById Int
  rsvps       Rsvp[]
}

model Rsvp {
  id Int @id @default(autoincrement())

  user   User @relation(fields: [userId], references: [id])
  userId Int

  event     Event @relation(fields: [eventId], references: [id])
  eventId   Int

  @@unique([userId, eventId])
}